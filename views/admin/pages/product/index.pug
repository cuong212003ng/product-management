extends ../../layout/default.pug
include ../../mixins/btn_fillterStatus.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug

block main
    h1.mb-4 Danh sách sản phẩm

    .card.mb-4
        .card-header Bộ lọc và tìm kiếm
        .card-body
            .row
                .col-md-6.mb-3
                    +btn_fillterStatus(fillterStatus)
                .col-md-6
                    +search(keyword)
                             
    .card.mb-4
        .card-header Danh sách sản phẩm
        .card-body
            .table-responsive
                table.table.table-hover.table-sm
                    thead
                        tr
                            th STT
                            th Hình ảnh
                            th Tiêu đề
                            th Giá
                            th Trạng thái
                            th Hành động

                    tbody
                        each item, index in products
                            tr
                                td #{index + 1}
                                td
                                    img(
                                        src=item.thumbnail
                                        alt=item.title
                                        width="100px"
                                        height="auto"
                                        class="img-thumbnail"
                                    )
                                td #{item.title}
                                td #{item.price}$
                                td
                                    if(item.status == "active")
                                        span.badge.bg-success Hoạt động
                                    else
                                        span.badge.bg-danger Dừng hoạt động
                                td
                                    button(class="btn btn-warning btn-sm me-2") Sửa
                                    button(class="btn btn-danger btn-sm") Xóa
    
    nav
        +pagination(pagination)
    
    
    
