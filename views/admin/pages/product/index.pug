extends ../../layout/default.pug
include ../../mixins/btn_fillterStatus.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change_multi.pug


block main
    h1.mb-4 Danh sách sản phẩm

    .card.mb-4
        .card-header Bộ lọc và tìm kiếm
        .card-body
            .row
                .col-md-6.mb-3
                    +btn_fillterStatus(fillterStatus)
                .col-md-6
                    +search(keyword)
                             
    .card.mb-4
        .card-header Danh sách 
        .card-body
            +formChangeMulti(`${prefixAdmin}/products/change-multi?_method=PATCH`)
            .table-responsive
                table(
                    class="table table-hover table-sm"
                    checkbox-multi
                )
                    thead
                        tr
                            th 
                                input(
                                    type="checkbox" 
                                    name="checkAll"
                                )
                            th STT
                            th Hình ảnh
                            th Tiêu đề
                            th Giá
                            th Trạng thái
                            th Hành động

                    tbody
                        each item, index in products
                            tr
                                td  
                                    input(
                                        type="checkbox"
                                        name="id"
                                        value=item._id
                                    )
                                td #{index + 1}
                                td
                                    img(
                                        src=item.thumbnail
                                        alt=item.title
                                        width="100px"
                                        height="auto"
                                        class="img-thumbnail"
                                    )
                                td #{item.title}
                                td #{item.price}$
                                td
                                    if(item.status == "active")
                                        a(
                                            href=`#`
                                            data-id=item._id
                                            data-status=item.status
                                            button-change_status
                                            class="badge bg-success"
                                            style="text-decoration: none;"
                                        )   Hoạt động
                                    else
                                        a(
                                            href=`#`
                                            data-id=item._id
                                            data-status=item.status
                                            button-change_status
                                            class="badge bg-danger"
                                            style="text-decoration: none;"
                                        )   Dừng hoạt động
                                td
                                    button(class="btn btn-warning btn-sm me-2") Sửa
                                    button(class="btn btn-danger btn-sm") Xóa
    
    nav
        +pagination(pagination)

    form(
        action=""
        method="POST"
        id="form-change-status"
        data-path=`${prefixAdmin}/products/change-status`
    ) 


    script(src="/admin/js/product.js")
    
    
    
