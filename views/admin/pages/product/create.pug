extends ../../layout/default.pug
include ../../mixins/show-alert.pug

block main 

    +alert-error(5000)

    h1(class="mb-4") Thêm sản phẩm mới

    form(
        action=`${prefixAdmin}/products/create?_method=POST`
        id="form-create-product"
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")        
            label(for="title") Tiêu đề sản phẩm
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required
            )
        div(class="form-group")
            label(for="desc") Mô tả sản phẩm
            textarea(
                class="form-control"
                id="desc"
                name="description"
                rows="5"
            )
        div(class="form-group")
            label(for="price") Giá sản phẩm
            input(
                type="number"
                class="form-control"
                id="price"
                name="price"
                value="0"
                min="0"
                required
            )
        div(class="form-group")
            div(class="form-group")
            label(for="discount")  % Giảm giá
            input(
                type="number"
                class="form-control"
                id="discount"
                name="discountPercentage"
                value="0"
                min="0"
            )

        div(class="form-group")
            div(class="form-group")
            label(for="stock")  Số lượng sản phẩm
            input(
                type="number"
                class="form-control"
                id="stock"
                name="stock"
                value="0"
                min="0"
            )
        div(class="form-group")
            div(class="form-group")
            label(for="rating")  % Đánh giá sản phẩm
            input(
                type="number"
                class="form-control"
                id="rating"
                name="rating"
                value="0"
                min="0"
                step="0.1"
            )
        div(
            class="form-group"
            upload-image
        )
            label(for="thumbnail")  Hình ảnh sản phẩm 
            <br>
            input(
                type="file"
                class="form-control-file"
                id="thumbnail"
                name="thumbnail"
                accept="image/*"
                upload-image-input
            )
            img(
                src=""
                upload-image-preview
                class="image-preview"
            )
            button(
                type="button"
                id="upload-image-remove"
                class="btn btn-danger"
                style="right: 50px;"
                upload-image-remove
            )   Xóa hình ảnh
            
        div(class="form-group")
            label(for="position")  Vị trí sản phẩm
            input(
                type="number"
                class="form-control"
                id="position"
                name="position"
                placeholder="Tự động tăng dần"
                min="1"
            )
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked
            )
            label(for="statusActive" class="form-check-label") Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInactive"
                name="status"
                value="inactive"
            )
            label(for="statusInactive" class="form-check-label") Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            )   Tạo mới sản phẩm 
                
    script(src="/admin/js/product.js")
    script(src="/admin/js/script.js") 

